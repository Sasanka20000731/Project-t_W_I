@model PeojectTWI.Models.masterStore

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert To Master Store</h2>

@using (Html.BeginForm("insertMasterStore", "Inventory"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="lable">Product</div>
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger", @required = "required" })
                @Html.DropDownListFor(model => model.ProductId, new SelectList(Model.ProductList, "ProductCategoryID", "ProductName"), "Select Product", new { @class = "form-control", @required = "required" })
            </div>
        </div>

        <div class="form-group">
            <div class="lable">Perchesed Count</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.perchesedCount, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.perchesedCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="lable">Unit Price</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.unitPrice, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.unitPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="lable">Perchesed Date</div>
            <div class="col-md-10">
                <input type="date" id="PerchesedDate" name="PerchesedDate" class="form-control">
                @Html.ValidationMessageFor(model => model.PerchesedDate, "", new { @class = "text-danger", @required = "required" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10 button-group">
                <input type="submit" value="Insert" class="btn btn-custom btn-insert" style="width:50%" />
                <input type="button" value="Clear" class="btn btn-custom btn-clear"  style="width:50%" onclick="clearForm()" />
            </div>
        </div>


    </div>
}

<script>
    function clearForm() {
        var form = document.forms[0];
        form.reset();
        var validationMessages = document.querySelectorAll('.text-danger');
        validationMessages.forEach(function (message) {
            message.textContent = '';
        });
    }
</script>


<style>

    .btn-custom {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        margin-right: 10px; /* Space between buttons */
    }

    .btn-insert {
        background-color: #5cb85c; /* Green background */
    }

        .btn-insert:hover {
            background-color: #4cae4c;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    .btn-clear {
        background-color: #d9534f; /* Red background */
    }

        .btn-clear:hover {
            background-color: #c9302c;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    .form-group {
        margin-bottom: 20px;
    }

    .button-group {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .col-md-10 {
        padding-left: 0;
        padding-right: 0;
    }
</style>
