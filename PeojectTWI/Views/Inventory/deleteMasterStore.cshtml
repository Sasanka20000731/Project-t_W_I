@model PeojectTWI.Models.masterStore

@{
    ViewBag.Title = "deleteMasterStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Master Store</h2>

<div>
    <dl class="dl-horizontal" style="margin-left:5%">

        <div class="row" style="margin-top:2%">
            <lable id="topic">Product Name : </lable>  @Html.DisplayFor(model => model.MasterProductName)
        </div>

        <div class="row">
            <lable id="topic">Count : </lable>     @Html.DisplayFor(model => model.perchesedCount)
        </div>
        <div class="row">
            <lable id="topic">Unit Price (Rs.) : </lable>      @Html.DisplayFor(model => model.unitPrice)
        </div>
        <div class="row">
            <lable id="topic">Purchesed Date : </lable>   @Convert.ToDateTime(Model.PerchesedDate).ToString("dd/MM/yyyy")
        </div>
        <div class="row">
            <lable id="topic">Entered Date : </lable>   @Convert.ToDateTime(Model.createdDate).ToString("dd/MM/yyyy")
        </div>

    </dl>
</div>
<p>
    @Html.ActionLink("Delete Master Item", "removeMasterStore", new { msDeleteid = Model.mStoreId  }, new { @class = "btn-custom btn-delete" })
    @Html.ActionLink("Back to List", "viewtMasterStore", null, new { @class = "btn-custom btn-back" })
</p>

<style>
    #topic {
        font-weight: bold;
        font-size: 16px;
        color: #333; /* Dark grey color */
        margin-right: 10px;
        display: inline-block;
        width: 150px; /* Ensures alignment */
    }

    .row {
        margin-bottom: 2%;
    }
    .btn-custom {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
        cursor: pointer;
    }

    .btn-delete {
        background-color: #d9534f; /* Bootstrap's 'btn-danger' color */
        border: 1px solid #d43f3a;
    }

        .btn-delete:hover {
            background-color: #c9302c; /* Darker red on hover */
        }

    .btn-back {
        background-color: #5bc0de; /* Bootstrap's 'btn-info' color */
        border: 1px solid #46b8da;
    }

        .btn-back:hover {
            background-color: #31b0d5; /* Darker blue on hover */
        }
</style>