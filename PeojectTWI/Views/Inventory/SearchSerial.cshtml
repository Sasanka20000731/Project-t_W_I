
@{
    ViewBag.Title = "SearchSerial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Serial</h2>

<div class="row" ng-app="myapp" ng-controller="MyController">

    <div class="container-lg" style="margin-bottom:10px;">

        <div class="row" style="margin-bottom:30Px;">

            <div class="col-7">
                <input class="form-control" type="text" ng-model="SerialNumberToSearch" style="width:100%" />
            </div>
            <div class="col-2" >
                <button class="custom-button" style="width:100%" ng-click="SearchSerialNumber()">Search</button>
            </div>
            <div class="col-2">
                <button class="custom-button" style="width:100%" ng-click="ClearSearchInventory()">Clear</button>
            </div>

        </div>
    </div>
    <div clss="row">

    </div>

    <div class="container-lg" style="align-content:center">

        <div class="row">
            <div class="col-4">
                <label>
                    Brand Name
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.BrandName" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Product Name
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.ProductName" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Vendor Name
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.VendorName" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Vendor Email
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.VendorEmail" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Vendor Contact Number
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.VendorContact" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Date 
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.InOrOutDateStr" style="width:100%" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>
                    Current Location
                </label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" ng-model="SearchedItemDetails.CurrentLocation" style="width:100%" />
            </div>
        </div>
    </div>
</div>


<style>
    body {
        margin: 20px;
        background: #f4f7f8;
    }

    .container {
        max-width: 600px;
        margin: auto;
    }

    label {
        font-family: 'Times New Roman', Times, serif font-weight:bold;
        display: block;
        margin-top: 10px;
    }

    input, select {
        margin-top: 5px;
    }

    button {
        color: blue;
        background-color: blueviolet;
        margin-top: 10px;
        width: 100%;
        font-size: 20Px;
        border: medium;
    }

    .custom-button {
        height: 50px;
        background-color: #1a2c34;
        border-radius: 10px;
        height: 70%;
/*        margin-top: 0px;*/
        /*padding-bottom:10px;*/
        /*margin-bottom: 20px;*/
        float: left;
        border: 0px;
        color: #fff;
        width: 130%;
        -webkit-transition-duration: 0.9s;
        -webkit-transition-timing-function: linear;
        box-shadow: 0px 0 0 #2e4f5e inset;
    }


        .custom-button:hover {
            box-shadow: 900Px 0 0 #2e4f5e inset;
        }
</style>

