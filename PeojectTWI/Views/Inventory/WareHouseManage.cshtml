
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Warehouse Manage</h2>


<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="PageLoad()">
    <div class="col-md-12 col-sm-12 form-group">

        <div class="row">
            <div class="col-md-6">
                <div class="col-6">
                    <label>
                        <input type="radio" name="RadioValue" value=1 ng-model="RadioValue"> In to the Store
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-lg-6">
                    <label>
                        <input type="radio" name="RadioValue" value=2 ng-model="RadioValue"> Out To the Store
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="col-6">
                    <label for="droproductCategory">Product Categories</label>

                    <select id="droproductCategory" name="droproductCategory">
                        <option value="">Select Product Category</option>
                        <option ng-repeat="item in TypeChoices" value="{{item.ProductID}}">{{item.ProductName}}</option>
                    </select>
                </div>
            </div>

            @*<div class="col-md-6">
                <div class="col-6">
                    <label for="droMasterStore">Master Stock</label>
                    <select id="droMasterStore" name="droMasterStore">
                        <option value="">Select Master Store</option>
                        <option ng-repeat="item in TypeChoices2" value="{{item.mStoreId}}">{{item.MasterProductName}}</option>
                    </select>
                </div>
            </div>*@

        </div>

        <div class="row">
            <div class="col-6">
                <label for="serialNumber">Serial Number:</label>
                <input type="text" id="serialNumber" name="serialNumber" ng-model="SerialNumber">
            </div>
        </div>

        <div class="col-md-8">
            <div class="input-group">
                <button class="btn btn-bitbucket" id="btnProcess" ng-click="SaveData()">
                save
                <i class="fa fa-save" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>

</div>

