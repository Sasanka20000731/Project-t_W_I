
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="header-title">Warehouse Management</h2>

<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="PageLoad()">
    <div class="col-md-12 col-sm-12 form-group">
        <div class="row">
            <div class="col-md-6 radio-container">
                <label class="radio-label">
                    <input type="radio" name="RadioValue" value="1" ng-model="RadioValue" ng-change="CheckData()"> In to the Store
                </label>
            </div>
            <div class="col-md-6 radio-container">
                <label class="radio-label">
                    <input type="radio" name="RadioValue" value="2" ng-model="RadioValue" ng-change="CheckData()"> Out to the Store
                </label>
            </div>
        </div>

        <div class="row form-section">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="droproductCategory">Product Categories</label>
                    <select id="droproductCategory" name="droproductCategory" ng-model="droproductCategory" class="form-control">
                        <option value="">Select Product Category</option>
                        <option ng-repeat="item in TypeChoices" value="{{item.ProductID}}">{{item.ProductName}}</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="serialNumber">Serial Number</label>
                    <input type="text" id="serialNumber" name="serialNumber" ng-model="SerialNumber" ng-change="CheckData()" class="form-control">
                </div>
            </div>

            <div class="col-md-6 button-container">
                <button class="btn btn-primary custom-button" id="btnProcess" ng-click="SaveData()" ng-disabled="disableSave">
                    <i class="fa fa-save" aria-hidden="true"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 20px;
        background: #f4f7f8;
        font-family: Arial, sans-serif;
    }

    .header-title {
        text-align: center;
        margin-bottom: 20px;
        color: #2c3e50;
    }

    .radio-container {
        margin-bottom: 20px;
        text-align: center;
    }

    .radio-label {
        font-size: 18px;
        font-weight: bold;
        color: #2c3e50;
    }

    .form-section {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #2c3e50;
        font-size: 16px;
    }

    input, select {
        margin-top: 5px;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.12);
    }

    .custom-button {
        background-color: #18272e;
        border: none;
        color: white;
        padding: 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin-top: 20px;
        border-radius: 5px;
        width: 100%;
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .custom-button i {
            margin-right: 8px;
        }

        .custom-button:hover {
            background-color: #133c50;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }
</style>

