
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Warehouse Manage</h2>


<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="PageLoad()">
    <div class="col-md-12 col-sm-12 form-group">

        <div class="row">
            <div class="col-md-6">
                <div class="col-6">
                    <label>
                        <input type="radio" name="RadioValue" value=1 ng-model="RadioValue" ng-change="CheckData()"> In to the Store
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-lg-6">
                    <label>
                        <input type="radio" name="RadioValue" value=2 ng-model="RadioValue" ng-change="CheckData()"> Out To the Store
                    </label>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-6">
                <div class="row">
                    <label for="droproductCategory">Product Categories</label>
                    <select id="droproductCategory" name="droproductCategory" ng-model="droproductCategory" class="form-control">
                        <option value="">Select Product Category</option>
                        <option ng-repeat="item in TypeChoices" value="{{item.ProductID}}">{{item.ProductName}}</option>
                    </select>
                </div>
                <div class="row">
                    <label for="serialNumber">Serial Number:</label>
                    <input type="text" id="serialNumber" name="serialNumber" ng-model="SerialNumber" ng-change="CheckData()" class="form-control">
                </div>

            </div>



            <div class="col-6" style="align-content:center;">

                <button class="custom-button" id="btnProcess" ng-click="SaveData()" ng-disabled="disableSave">
                    Save
                    <i class="fa fa-save" aria-hidden="true"></i> 
                </button>
                @*<button class="btn btn-bitbucket" id="btnProcess" ng-click="SaveData()" ng-disabled="disableSave">
                    save
                    
                </button>*@


            </div>


    

        </div>

    </div>

</div>

<style>
    body {
        margin: 20px;
        background: #f4f7f8;
    }

    .container {
        max-width: 600px;
        margin: auto;
    }

    label {
        font-family: 'Times New Roman', Times, serif font-weight:bold;
        display: block;
        margin-top: 10px;
    }

    input, select {
        margin-top: 5px;
    }

    button {
        color: blue;
        background-color:blueviolet;
        margin-top: 10px;
        width:100%;
        font-size:20Px;

        border:medium;

    }
    .custom-button {
        height: 50px;
        background-color: #1a2c34;
        border-radius: 10px;
        height: 90%;
        margin-top: 20px;
        margin-bottom: 20px;
        float: left;
        border: 0px;
        color: #fff;
        width: 100%;
        -webkit-transition-duration: 0.9s;
        -webkit-transition-timing-function: linear;
        box-shadow: 0px 0 0 #2e4f5e inset;
    }


        .custom-button:hover {
            box-shadow: 900Px 0 0 #2e4f5e inset;
        }

</style>

