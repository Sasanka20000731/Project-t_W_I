@model PeojectTWI.Models.productCategory

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Product Category</h2>
<input type="hidden" id="ProductID" value="@ViewBag.ProductID" />


@Html.AntiForgeryToken()

<div class="form-horizontal" ng-app="myapp" ng-controller="MyController" ng-init="loadProductCategoryDetails()" style="margin-bottom:100px;">
    <h4>product Category</h4>
    <hr />
    <div class="form-group">
        <lable>Product Name</lable>
        <div class="col-md-10">
            <input type="text" id="ProductName" name="ProductName" ng-model="ProductName" class="form-control" required />
        </div>
    </div>
    <div class="form-group">
        <lable>Brand Name</lable>
        <div class="col-md-10">
            <input type="text" id="BrandName" name="BrandName" ng-model="BrandName" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <lable>Vendor Name</lable>
        <div class="col-md-10">
            <input type="text" id="VendorName" name="VendorName" ng-model="VendorName" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <lable>Vendor Contact</lable>
        <div class="col-md-10">
            <input type="text" id="VendorContact" name="VendorContact" ng-model="VendorContact" ng-change="validateMobileNumber()" class="form-control" required />
            <span class="text-danger" ng-show="mobileNumberAsyncError">
                {{ mobileNumberAsyncErrorMessage }}
            </span>
        </div>
    </div>

    <div class="form-group">
        <lable>Vendor Address</lable>
        <div class="col-md-10">
            <input type="text" id="VendorAddress" name="VendorAddress" ng-model="VendorAddress" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <lable>Vendor Email</lable>
        <div class="col-md-10">
            <input type="text" id="VendorEmail" name="VendorEmail" ng-model="VendorEmail" ng-change="validateEmail()" class="form-control" required />
            <span class="text-danger" ng-show="EmailAsyncError">
                {{ EmailAsyncErrorMessage }}
            </span>

        </div>
    </div>

    <div class="form-group">
        <lable>Active</lable> <input type="checkbox" id="Active" name="Active" ng-model="Active" style="margin-left:10px;" required />
          
        

    </div>


    <div class="row">
        <div class="col-10">
            <button class="custom-button" ng-click="UpdateProductCategory()">Update</button>
        </div>

        @*<div class="col-5">

        </div>
        <div class="col-2">

        </div>*@
    </div>

</div>



<style>
    .bold-item {
        font-weight: bold;
        font-size: 18px;
    }

    .Strong-item {
        font-weight: bold;
        font-size: 24px;
    }

    .normal-item {
        font-size: 18px;
    }

    .custom-button {
        height: 50px;
        background-color: #1a2c34;
        border-radius: 10px;
        float: left;
        border: 0px;
        color: #fff;
        width: 100%;
        -webkit-transition-duration: 0.9s;
        -webkit-transition-timing-function: linear;
        box-shadow: 0px 0 0 #2e4f5e inset;
    }

        .custom-button:hover {
            box-shadow: 1200Px 0 0 #2e4f5e inset;
        }
</style>




