
@{
    ViewBag.Title = "RejectSaleItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="form" ng-app="myapp" ng-controller="MyController">

    <div class="col-5">
  
        <form name="form1">
            <div class="form-group">
                <label>Enter Serial Number:</label>
                <input type="text" class="form-control" ng-model="serialNumber1" required>
            </div>

            <div class="form-group">
                <label>Enter NIC Number:</label>
                <input type="text" class="form-control" ng-model="nicNumber1" required>
            </div>

            <div class="form-group">
                <label>Invoice Number:</label>
                <input type="text" class="form-control" ng-model="InvoiceNumber" required>
            </div>

            <button type="button" ng-click="SearchSale()" class="form-control">Search</button>
        </form>
    </div>
    <div class="col-2"></div>
    <div class="col-5">

 
            <div class="form-group">
                <label>Serial Number:</label>
                <input type="text" class="form-control" ng-model="serialNumber2" required>
            </div>

            <div class="form-group">
                <label>Sale Date:</label>
                <input type="text" class="form-control" ng-model="saleDate" required>
            </div>

            <div class="form-group">
                <label>Customer Name:</label>
                <input type="text" ng-model="customerName" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Customer Number:</label>
                <input type="text" ng-model="customerNumber" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Customer NIC:</label>
                <input type="text" ng-model="customerNic" class="form-control" required>
            </div>

            <button type="button" ng-click="rejectForm()" class="form-control">Reject</button>

    </div>


</div>

