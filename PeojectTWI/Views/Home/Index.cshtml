@{
    ViewBag.Title = "Home Page";
}


<div class="row" ng-app="myapp" ng-controller="MyController" ng-init="LoadDashbordData()">

    <div class="row col-lg-12">

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2" style="background-color: #d0d8dc; " box-shadow: 10px,11px,black,inset;>
                <i class="fa fa-clock-o" aria-hidden="true" style="position:absolute; margin: 8%; font-size: 111px; opacity:0.2;"></i>
                <div class="card-body" style="position:relative">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <lable style="color: #2d2e54; font-size:100%">Pending Tickets</lable>  
                            </div>
                            <div class="h2 mb-0 font-weight-bold text-gray-800">{{PendingTickets}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-sticky-note fa-2x text-gray-300"></i>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2" style="background-color: #d0d8dc;">
                <i class="fa fa-folder-open" aria-hidden="true" style="position:absolute; margin: 8%; font-size: 111px; opacity:0.2;"></i>
                <div class="card-body" style="position:relative">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <lable style="color: #2d2e54">Opened Tickets</lable>
                            </div>
                            <div class="h2 mb-0 font-weight-bold text-gray-800">{{OpenedTickets}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-ticket fa-2x text-gray-300"></i>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2" style="background-color: #d0d8dc; ">
                <i class="fa fa-window-close" aria-hidden="true" style="position:absolute; margin: 8%;  font-size: 111px; opacity:0.2;"></i>
                <div class="card-body" style="position:relative">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <lable style="color: #2d2e54">Closed Tickets</lable>
                            </div>
                            <div class="h2 mb-0 font-weight-bold text-gray-800">{{ClosedTickets}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-window-close fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2" style="background-color: #d0d8dc; ">

                <i class="fa fa-calendar" aria-hidden="true" style="position:absolute; margin: 8%; font-size: 111px; opacity:0.2;"></i>
                <div class="card-body" style="position:relative">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold  text-warning text-uppercase mb-1">
                              <lable style="color: #2d2e54">Date</lable>
                            </div>
                            <div class="h2 mb-0 font-weight-bold text-gray-800">{{CurrentDate}}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row col-lg-12" style="margin-bottom:1%"> </div>

    <div class="row col-lg-12">
       
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #d0d8dc;">
                    <h6 class="m-0 font-weight-bold text-primary"><lable style="color:black">Ticket Submittion Overview</lable></h6>
                </div>
                <div class="card-body" style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%);">
                    <div class="chart-area" ng-hide="chartLoading">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                    <div class="text-center" ng-show="chartLoading">
                        <i class="fas fa-spinner fa-spin fa-3x"></i>
                        <p>Loading chart...</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #d0d8dc;">
                    <h6 class="m-0 font-weight-bold text-primary"><lable style="color:black">Assigned Chart</lable></h6>
                </div>
                <div class="card-body" style="background-image: linear-gradient(to top, #c4c5c7 0%, #dcdddf 52%, #ebebeb 100%);">
                    <canvas id="myPieChart"></canvas>
                </div>
            </div>
        </div>

    </div>

</div>

<style>
    .card .fa {
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .card:hover .fa {
        transform: scale(1.1);
        opacity: 0.5;
    }
    header {
        background-color: #000000;
        color: #ffffff;
        padding: 20px 0px;
    }

    h1, h3 {
        text-transform: uppercase;
    }

    .counter {
        text-align: center;
    }

    .counter-count {
        font-size: 50px;
        font-weight: bold;
        position: relative;
        color: #000000;
        text-align: center;
        display: inline-block;
    }

    .info-box-icon {
        height: 60px;
        width: 70px;
        font-size: 48px;
        line-height: 60px;
    }
</style>

<script>

    $('.counter-count').each(function () {
        debugger
        $(this).prop('Counter', 0).animate({
            Counter: $(this).text()
        }, {

            //chnage count up speed here
            duration: 4000,
            easing: 'swing',
            step: function (now) {
                $(this).text(Math.ceil(now));
            }
        });
    });

</script>


