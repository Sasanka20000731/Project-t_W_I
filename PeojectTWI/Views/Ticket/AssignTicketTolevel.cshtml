@model PeojectTWI.Models.Ticket

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign Tickets</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="LoadTicketHandlers()">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                <label>Ticket Number</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TicketId, new { htmlAttributes = new { @class = "form-control", @id = "TicketId" } })
                    @Html.ValidationMessageFor(model => model.TicketId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Coustomername, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Coustomername, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Coustomername, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label>Ticket Desctiption</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TicketDiscription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TicketDiscription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label>Ticket Date</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="droproductCategory">Ticket handlers</label>
                <select class="form-control" id="DropTicketHandlrrListID" name="DropTicketHandlrrList" ng-model="DropTicketHandlersList">
                    <option value="">Select Ticket Handler</option>
                    <option ng-repeat="item in TicketHandlers" value="{{item.UserId}}">{{item.UserName}}</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <button type="button" class="btn btn-google" id="BtnTicketAssignId" style="height:25px;padding-top:0px;" ng-click="AssignTicket()">
                    Assign Ticket
                </button>
            </div>
        </div>
    </div>
}






