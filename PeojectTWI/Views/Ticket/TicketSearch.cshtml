
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ticket Search</h2>

<div class="row" ng-app="myapp" ng-controller="MyController">

    <div class="container" style="margin-bottom:10px;">
        <div class="row">
            <div class="col-5 bold-item" style="text-align:center">Ticket number</div>
            <div class="col-5 bold-item" style="text-align:center">Contact Number</div>
        </div>
        <div class="row">
            <div class="col-5">
                <input class="form-control" type="text" ng-model="TicketNumber" style="width:100%" />

            </div>
            <div class="col-5">
                <input class="form-control" type="text" ng-model="TicketCustomerContactNumber"  style="width:100%" />
            </div>
            <div class="col-2">
                <button class="custom-button" style="width:100%" ng-click="SearchTicketLists()">Search</button>
            </div>

        </div>
    </div>

    <div class="container" style="margin-bottom:10px; max-width:100%">
        <table class="table table-bordered" style="margin-bottom:20px;">
            <thead style="font-size: 8px; border-bottom-style: solid; border-bottom-width: 2px; border-bottom-color: rgb(204, 204, 204);">
                <tr style="background-color: #1a2c34;color: #fff;">
                    <th class="text-center">Index</th>
                    <th class="text-center">Ticket Id</th>
                    <th class="text-center">Ticket Date</th>
                    <th class="text-center">Customer</th>
                    <th class="text-center">Contact</th>
                    <th class="text-center">Enail</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="repeat in SearchTicketList | orderBy : '-Id'" ng-class-odd="{'gray': datatable}">
                    <td class="text-center">{{$index + 1}}</td>
                    <td class="text-center" ng-bind="repeat.TicketId"></td>
                    <td class="text-center" ng-bind="repeat.TicketDate"></td>
                    <td class="text-center" ng-bind="repeat.Coustomername"></td>
                    <td class="text-center" ng-bind="repeat.CoustomerContact"></td>
                    <td class="text-center" ng-bind="repeat.CoustomerEmail"></td>
                    <td class="text-center">

                        <button type="button" class="btn btn-google" id="btnUpdate" style="height:25px;padding-top:0px;" ng-click="getAllTicketDetails(repeat.TicketId)">
                            <i class="fa fa-file-text-o" aria-hidden="true"  style="vertical-align: super; padding-top: 5px;"></i>
                        </button>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>







</div>



<style>
    .bold-item {
        font-weight: bold;
        font-size: 18px;
    }

    .Strong-item {
        font-weight: bold;
        font-size: 24px;
    }

    .normal-item {
        font-size: 18px;
    }

    .custom-button {
        height: 90%;
        background-color: #1a2c34;
        border-radius: 10px;
        float: left;
        border: 0px;
        color: #fff;
        width: 100%;
        -webkit-transition-duration: 0.9s;
        -webkit-transition-timing-function: linear;
        box-shadow: 0px 0 0 #2e4f5e inset;
    }

        .custom-button:hover {
            box-shadow: 700Px 0 0 #2e4f5e inset;
        }
</style>


