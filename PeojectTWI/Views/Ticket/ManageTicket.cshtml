
@{
    ViewBag.Title = "ManageTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Ticket</h2>
<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="LogadPendingTickets()">

    <div class="col-md-12 col-sm-12 form-group">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Ticket Number</th>
                        <th>Ticket Description</th>
                        <th>Assigned Date</th>
                        <th>Current Status</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in PendingTicketResult">
                        <td>{{ $index+1 }}</td>
                        <td>{{ item.TicketId }}</td>
                        <td>{{ item.TicketDiscription }}</td>
                        <td>{{ item.AssignDate }}</td>
                        <td>{{ item.CurrentStatus }}</td>
                        <td>
                            <button type="button" class="btn btn-google" id="btnGetDetailsID" style="height:25px;padding-top:0px;" ng-click="getTicketDetails(repeat.TicketId)">
                                <i class="fa fa-trash-o" aria-hidden="true" style="vertical-align: super; padding-top: 5px;"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



