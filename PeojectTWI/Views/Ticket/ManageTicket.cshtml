
@{
    ViewBag.Title = "ManageTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Ticket</h2>
<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="LogadPendingTickets()">

    <div class="col-md-12 col-sm-12 form-group">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Ticket Number</th>
                        <th>Ticket Description</th>
                        <th>Assigned Date</th>
                        <th>Current Status</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="repeat in PendingTicketResult">
                        <td>{{ $index+1 }}</td>
                        <td>{{ repeat.TicketId }}</td>
                        <td>{{ repeat.TicketDiscription }}</td>
                        <td>{{ repeat.AssignDate }}</td>
                        <td>{{ repeat.CurrentStatus }}</td>
                        <td>
                            <button type="button" class="btn btn-google" id="btnGetDetailsID" style="height:25px;padding-top:0px;" ng-click="getTicketDetailsPage(repeat.TicketId)">
                                
                                <i class="fa fa-file-text-o" aria-hidden="true" style="vertical-align:super; padding-top:5px;"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .btn.btn-google {
        position: relative;
        overflow: hidden;
    }

        .btn.btn-google:hover:after {
            content: "";
            position: absolute;
            background: rgba(255, 255, 255, 0.3);
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
            transform: scale(0);
            transition: transform 0.3s ease;
        }

        .btn.btn-google:hover {
            color: #fff;
            background-color: #142127;
        }

            .btn.btn-google:hover:after {
                transform: scale(1);
            }
</style>



