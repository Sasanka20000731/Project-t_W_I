
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Check Warrenty Details</h3>


<div class="row" id="form" ng-app="myapp" ng-controller="MyController">

    <div class="col-5" style="box-shadow: 0px 0px 9px rgba(49, 11, 112, 0.5);">

        <div class="row-cols-8">
            <form name="form1">
                <div class="form-group" style="margin-top:20px;">
                    <label>Enter Serial Number:</label>
                    <input type="text" class="form-control" ng-model="SerialNumber" required>
                </div>

                <div class="form-group">
                    <label>Contact Number:</label>
                    <input type="text" class="form-control" ng-model="ContactNumber" required>
                </div>

                <button type="button" ng-click="SearchWarrentyList()" class="form-control">Search</button>
            </form>
        </div>
        <br />
        <div class="row-cols-8">
            <table class="table table-responsive table-bordered" width="100%" style="margin-bottom:20px;">
                <thead style="font-size: 8px; border-bottom-style: solid; border-bottom-width: 2px; border-bottom-color: rgb(204, 204, 204);">
                    <tr style="background-color: #1a2c34;color: #fff; width:100%">

                        <th class="text-center" width="10%">No</th>
                        <th class="text-center" width="50%">Serial No</th>
                        <th class="text-center" width="25%">Date</th>
                        <th class="text-center" width="25%"> </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="repeat in LoadedWarrentyDataList  | orderBy : '-Id'" ng-class-odd="{'gray ':datatable}">
                        <td class="text-center">{{$index + 1}}</td>
                        <td class="text-center" ng-bind="repeat.SerialNo"></td>
                        <td class="text-center" ng-bind="repeat.WarrentyStartDate"></td>
                        <td class="text-center">
                            <button type="button" class="btn btn-google" id="btnViewMoreData" style="height:25px;padding-top:0px;" ng-click="SearchWarrentyBySerial(repeat.SerialNo)">
                                <i class="fa fa-trash-o" aria-hidden="true" style="vertical-align: super; padding-top: 5px;"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <div class="col-1"></div>
    <div class="col-6" style="box-shadow: 0px 0px 9px rgba(49, 11, 112, 0.5);">


        <div class="form-group" style="margin-top:20px;">
            <label>Serial Number:</label>
            <input type="text" class="form-control" ng-model="SerialNumberToDisplay" required>
        </div>

        <div class="form-group">
            <label>Warrenty Start Date:</label>
            <input type="text" class="form-control" ng-model="WarrentyStartDateToDisplay" required>
        </div>

        <div class="form-group">
            <label>Warrenty End Date:</label>
            <input type="text" class="form-control" ng-model="WarrentyExpiredDateToDisplay" required>
        </div>

        <div class="form-group">
            <label>Warrenty History</label>

            <table class="table table-responsive table-bordered" width="100%" style="margin-bottom:20px;">
                <thead style="font-size: 8px; border-bottom-style: solid; width:100%; border-bottom-width: 2px; border-bottom-color: rgb(204, 204, 204);">
                    <tr style="background-color: #1a2c34;color: #fff;">

                        <th class="text-center" width="10%">No</th>
                        <th class="text-center">Comment</th>
                        <th class="text-center">Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="Items in LoadedWarrentyCommentsData  | orderBy : '-Id'" ng-class-odd="{'gray ':datatable}">
                        <td class="text-center">{{$index + 1}}</td>
                        <td class="text-center" ng-bind="Items.WarrentyComments"></td>
                        <td class="text-center" ng-bind="Items.WarrentyCommentedDate"></td>
                    </tr>
                </tbody>
            </table>
        </div>


    </div>


</div>

<style>
    .td {
        font-size: 8px;
    }

    .containerBlock {
        margin: 20px;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .row {
        margin-bottom: 20px;
    }

    button {
        color: black;
        padding: 10px 30%;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        button:hover {
            background-color: #45a049;
        }
</style>


