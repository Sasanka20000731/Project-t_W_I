
@{
    ViewBag.Title = "ExtendWarrenty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Extend Warrenty</h2>


<div class="row containerBlock" id="form" ng-app="myapp" ng-controller="MyController" ng-init="PageLoad()">


    <div class="product-form col-5">

        <div class="form-group">
            <label>Serial Number:</label>
            <input type="text" class="form-control" ng-model="SNumberToDisplay" style="width:100%" required>
        </div>

        <div class="form-group">
            <label>Warrenty Start Date:</label>
            <input type="text" class="form-control" ng-model="WaStartDate" required>
        </div>

        <div class="form-group">
            <label>Warrenty End Date:</label>
            <input type="text" class="form-control" ng-model="WExpiredDate" required>
        </div>


    </div>
    <div class="product-form col-2"></div>


    <div class="product-form col-5">

        <div class="form-group">
            <label>Warrenty Extended Period:</label>
            <div class="row" style="margin-top:20px;">
                <div class="col-lg-4">12 months</div>
                <div class="col-lg-4">24 months</div>
                <div class="col-lg-4">36 months</div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <input type="radio" id="warranty12" name="warranty" value=1 ng-model="radio" ng-click="PriceCalculationWarrenty(1)">
                </div>
                <div class="col-lg-4">
                    <input type="radio" id="warranty24" name="warranty" value=2 ng-model="radio" ng-click="PriceCalculationWarrenty(2)">
                </div>
                <div class="col-lg-4">
                    <input type="radio" id="warranty36" name="warranty" value=3 ng-model="radio" ng-click="PriceCalculationWarrenty(3)">
                </div>
            </div>

        </div>

        <div class="form-group">
            <label>Total:</label>
            <input type="text" class="form-control" ng-model="TotalCost" required>
        </div>

        <div class="form-group">

            <button type="button" class="btn btn-google" id="BtnExtendWarrentyIt" style="height:25px;padding-top:0px;" ng-click="ExtendWarrenty()">
                Extend Warrenty
            </button>
            <button type="button" class="btn btn-google" id="BtnExtendWarrentyIt" style="height:25px;padding-top:0px;" ng-click="ResetExtendForm()">
                Reset
            </button>
        </div>



    </div>





</div>



<style>
    .td {
        font-size: 8px;
    }

    .containerBlock {
        margin: 20px;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .row {
        margin-bottom: 20px;
    }

    button {
        color: black;
        padding: 10px 30%;
      
       
        cursor: pointer;
        font-size: 16px;
    }

    button:hover {
        background-color: #45a049;
    }
</style>

